{
  "name": "beauty-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "wrangler pages dev dist --d1=DB --r2=BUCKET --port 8788",
    "dev:full": "npm run build && npm run dev:server",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:api": "vitest run --config vitest.api.config.ts",
    "db:migrate:local": "wrangler d1 execute beauty-app-db --local --file=schema.sql",
    "db:migrate:staging": "wrangler d1 execute beauty-app-stg-db --file=schema.sql --env staging",
    "db:migrate:production": "wrangler d1 execute beauty-app-prod-db --file=schema.sql --env production",
    "deploy:staging": "wrangler pages deploy dist --project-name beauty-app-staging",
    "deploy:production": "wrangler pages deploy dist --project-name beauty-app"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.12.3",
    "lucide-react": "^0.575.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.1",
    "tailwind-merge": "^3.5.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260305.0",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.14",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.1.0",
    "tailwindcss": "^4.2.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.69.0"
  }
}
